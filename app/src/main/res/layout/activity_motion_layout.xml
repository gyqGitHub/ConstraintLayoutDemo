<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotionLayoutActivity"
    tools:ignore="MotionLayoutInvalidSceneFileReference,missingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            app:flow_maxElementsWrap="1"
            app:flow_wrapMode="chain"
            app:constraint_referenced_ids="btn_basic_1,btn_basic_2,
            btn_custom_attribute,btn_keyframe_position,btn_keyframe_attribute"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_basic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本使用之-双布局"
            />

        <Button
            android:id="@+id/btn_basic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本使用之-单布局"
            />

        <Button
            android:id="@+id/btn_custom_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义属性"
            />

        <Button
            android:id="@+id/btn_keyframe_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeyPosition"
            />

        <Button
            android:id="@+id/btn_keyframe_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="keyAttribute"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>